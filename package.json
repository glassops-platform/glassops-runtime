{
  "name": "glassops-runtime",
  "version": "1.0.0",
  "description": "The governance-first execution primitive for Salesforce DevOps.",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license LICENSE",
    "format": "prettier --write \"src/**/*.ts\" \"config/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"config/**/*.js\"",
    "lint": "eslint -c config/eslint.config.json \"src/**/*.ts\"",
    "test": "jest --config config/jest.config.js",
    "test:integration": "jest --config config/jest.integration.config.js",
    "test:all": "npm run test && npm run test:integration",
    "all": "npm run format && npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/glassops-platform/glassops-runtime.git"
  },
  "keywords": [
    "salesforce",
    "devops",
    "governance",
    "github-actions"
  ],
  "author": "Ryan Bumstead",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/cache": "^5.0.3",
    "@actions/core": "^2.0.2",
    "@actions/exec": "^2.0.0",
    "@actions/io": "^2.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
